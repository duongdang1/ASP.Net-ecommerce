@model IEnumerable<Product>

	@{
		ViewData["Title"] = "List of Products";
	}

<div class="row">
	<div class="col-md-8 offset-md-2">
		<table>
			<thead>
				<tr>
					<th>@Html.DisplayNameFor(model => model.ProductImageUrl)</th>
					<th>@Html.DisplayNameFor(model => model.ProductName)</th>
					<th>@Html.DisplayNameFor(model => model.ProductPrice)</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td class="align-middle">
							<img class="rounded-circle" src="@item.ProductImageUrl" alt="@item.ProductName" style="max-width: 150px"/>
						</td>
						<td class="align-middle">
							@Html.DisplayFor(ModelItem =>item.ProductName)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(ModelItem => item.ProductPrice)
						</td>
						<td class="align-middle">
							<a class="btn btn-danger">Add To Cart</a>
						</td>
					</tr>
				}
			</tbody>
			
		</table>
	</div>
</div>