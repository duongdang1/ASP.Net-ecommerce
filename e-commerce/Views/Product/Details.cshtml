@model Product

@{
    ViewData["Title"] = "Product details";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h5 class="card-title">
                                @Model.ProductName
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@Model.ProductImageUrl" width="100%" alt="@Model.ProductName">
                </div>
                
                <div class="col-md-12">
                    <div class="card-footer">
                        <p class="card-text">
                            <a class="btn btn-outline-primary float-right" asp-action="Index">
                                Back to List
                            </a>
                            <a class="btn btn-success text-white 
                               asp-controller="Orders" 
                               asp-action="AddItemToShoppingCart" asp-route-id="@Model.Id"><i class="bi bi-cart-plus"></i> Add to Cart (Price @Model.ProductPrice.ToString("c"))</a>
                        </p>
                    </div>
                </div>
                <div class="form-group">
                        
                            <a class="btn btn-outline-success float-right" asp-action="Update" asp-route-id="@Model.Id">Update</a>
                        
                </div>
                <div class="form-group">
                        
                            <a class="btn btn-outline-success float-right" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                        
                </div>
            </div>
        </div>
    </div>
</div>